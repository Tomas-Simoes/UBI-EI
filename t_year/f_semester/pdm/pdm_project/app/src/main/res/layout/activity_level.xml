                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Colectables       0/4"
                            android:textColor="#acbd93"
                            android:textSize="12sp"
                            android:gravity="center"/>

                    </LinearLayout>
                </FrameLayout>

            </GridLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>