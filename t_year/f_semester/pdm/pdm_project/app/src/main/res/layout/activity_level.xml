<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302821"
    tools:context=".activities.LevelsActivity">

    <LinearLayout
        android:id="@+id/levelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT LEVEL"
            android:textSize="45sp"
            android:textColor="#eafad9"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <!-- Grid of levels -->
        <GridLayout
            android:id="@+id/levelGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:gravity="center">

            <!-- Level 1 -->
            <FrameLayout
                android:id="@+id/levelFrame1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/level1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/level_overlay"
                    android:scaleType="fitCenter"
                    android:contentDescription="Level 1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvLevel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEVEL 1"
                        android:textColor="#edfcd7"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvRecord1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Record: --"
                        android:textColor="#acbd93"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvCollectibles1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collectables: 0/4"
                        android:textColor="#acbd93"
                        android:textSize="12sp"
                        android:gravity="center"/>

                </LinearLayout>
            </FrameLayout>

            <!-- Level 2 -->
            <FrameLayout
                android:id="@+id/levelFrame2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/level2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/level_overlay"
                    android:scaleType="fitCenter"
                    android:contentDescription="Level 2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvLevel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEVEL 2"
                        android:textColor="#edfcd7"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvRecord2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Record: --"
                        android:textColor="#acbd93"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvCollectibles2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collectables: 0/4"
                        android:textColor="#acbd93"
                        android:textSize="12sp"
                        android:gravity="center"/>

                </LinearLayout>
            </FrameLayout>

            <!-- Level 3 -->
            <FrameLayout
                android:id="@+id/levelFrame3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/level3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/level_overlay"
                    android:scaleType="fitCenter"
                    android:contentDescription="Level 3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvLevel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEVEL 3"
                        android:textColor="#edfcd7"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvRecord3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Record: --"
                        android:textColor="#acbd93"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvCollectibles3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collectables: 0/4"
                        android:textColor="#acbd93"
                        android:textSize="12sp"
                        android:gravity="center"/>

                </LinearLayout>
            </FrameLayout>

            <!-- Level 4 -->
            <FrameLayout
                android:id="@+id/levelFrame4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/level4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/level_overlay"
                    android:scaleType="fitCenter"
                    android:contentDescription="Level 4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvLevel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEVEL 4"
                        android:textColor="#edfcd7"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvRecord4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Record: --"
                        android:textColor="#acbd93"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvCollectibles4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collectables: 0/4"
                        android:textColor="#acbd93"
                        android:textSize="12sp"
                        android:gravity="center"/>

                </LinearLayout>
            </FrameLayout>

        </GridLayout>
    </LinearLayout>

</FrameLayout>